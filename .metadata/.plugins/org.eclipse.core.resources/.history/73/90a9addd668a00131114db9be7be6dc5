
public class Peiord {

	private static int pero(int s){
		String b = Integer.toBinaryString(s);
		System.out.println("binary "+b);
		int p=1;
		int mid = b.length()/2;
		int k=mid-1;
		int st =0;
		System.out.println("mid "+mid+" k "+k);
		
		while(k>0){
			String a = b.substring(0,k);
			String c = b.substring(k,k+k);
			System.out.println("a "+a+" b "+c);
			 
			System.out.println();
			 if(b.substring(0,k)==b.substring(k,k+k)){
				 System.out.println("k is "+k);
				 break;
			 }
			 k--;
		}
		
		System.out.println("p "+p+" k "+k );
		
		return p;
	}
	public static void main(String[] args) {
		pero(955);
	}
	
}
