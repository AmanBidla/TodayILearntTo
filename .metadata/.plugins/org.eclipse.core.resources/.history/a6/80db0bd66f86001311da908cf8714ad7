import java.util.ArrayList;
import java.util.Collections;
import java.util.HashMap;
import java.util.LinkedList;
import java.util.Scanner;
import java.util.Set;
import java.util.Stack;


public class Skype {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		String st = in.nextLine();
		
		int number = Integer.parseInt(st);
		int []deadLine = new int[number];
		int []minutes= new int[number];
		HashMap<Integer,Integer> deadMin = new HashMap<Integer,Integer>();
	    Stack<Integer> s = new Stack<Integer>();
	    
		
		for(int i=0;i<number;i++){
			in = new Scanner(System.in);
			st = in.nextLine();
			deadLine[i]=Integer.parseInt(st.split(" ")[0]);
			minutes[i]=Integer.parseInt(st.split(" ")[1]);
			deadMin.put(minutes[i],deadLine[i]);			
		}
		
		while(number>=0){
		
		Set<Integer>keys = deadMin.keySet();
		ArrayList<Integer> keylist = new ArrayList<Integer>(keys);
		Collections.sort(keylist);
		int max=Integer.MIN_VALUE;;
		for(int i=0;i<keylist.size();i++){
			max = Math.max(deadMin.get(keylist.get(i)), max);
		}
		
	System.out.println("max time is "+max);
	for(int j=0;j<keylist.size();j++){
		max-=keylist.get(j);
	}
	
	if(max<0) max =  max *-1;
	s.add(max);
	System.out.println("time remaning is "+max);
	
	number--;
	
	for(int i=0;i<number;i++){
		
	}
	
  
		}
		
		
		
	}
}
