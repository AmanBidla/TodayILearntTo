
public class Peiord {

	private static int pero(int s){
		String b = Integer.toBinaryString(s);
		System.out.println("binary "+b);
		int p=-1;
		int mid = b.length()/2;
		int k=0;
		System.out.println("mid "+mid);
		while((mid-1)/2>0){
			mid--;
			if(b.substring(0,mid)== b.substring(mid,k) ) break;
			k++;
			p = mid;
			System.out.println("mid "+mid+" k "+k );
		}
		
		System.out.println("p "+p );
		
		return p;
	}
	public static void main(String[] args) {
		pero(955);
	}
	
}
